<Page x:Class="Beauty_salon.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Beauty_salon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="36" FontWeight="Bold" Foreground="#FFD4057A" HorizontalAlignment="Center">Регистрация</TextBlock>
            <TextBlock Margin="20"></TextBlock>
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Фамилия:</TextBlock>
                    <TextBox x:Name="SurnameTb"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Имя:</TextBlock>
                    <TextBox x:Name="FirstnameTb"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Отчество:</TextBlock>
                    <TextBox x:Name="PatronymicTb"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Дата рождения:</TextBlock>
                    <DatePicker x:Name="BirthDp" Margin="5" Width="150"></DatePicker>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Телефон:</TextBlock>
                    <TextBox x:Name="PhoneTb" MaxLength="11" PreviewTextInput="PhoneTb_PreviewTextInput"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Логин:</TextBlock>
                    <TextBox x:Name="LoginTb"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Пароль:</TextBlock>
                    <PasswordBox x:Name="PasswordPb"></PasswordBox>
                </StackPanel>
            </StackPanel>
            <Button x:Name="RegistrationBtn" Background="#FFD4057A" Foreground="White" Click="RegistrationBtn_Click">Зарегистрироваться</Button>
            <Button x:Name="EntryBtn" Background="White" BorderBrush="#FFD4057A" Foreground="#FFD4057A" Click="EntryBtn_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
