<Page x:Class="Beauty_salon.Pages.AutharizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Beauty_salon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutharizationPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="36" FontWeight="Bold" Foreground="#FFD4057A" HorizontalAlignment="Center">Авторизация</TextBlock>
            <TextBlock Margin="30"></TextBlock>
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Логин:</TextBlock>
                    <TextBox x:Name="LoginTb"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Пароль:</TextBlock>
                    <PasswordBox x:Name="PasswordPb"></PasswordBox>
                </StackPanel>
            </StackPanel>
            <Button x:Name="EntryBtn" Background="#FFD4057A" Foreground="White" Click="EntryBtn_Click">Войти</Button>
            <Button x:Name="RegistrationBtn" Background="White" BorderBrush="#FFD4057A" Foreground="#FFD4057A" Click="RegistrationBtn_Click">Регистрация</Button>
        </StackPanel>
    </Grid>
</Page>
