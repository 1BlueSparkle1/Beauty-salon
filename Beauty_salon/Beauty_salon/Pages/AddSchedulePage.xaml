<Page x:Class="Beauty_salon.Pages.AddSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Beauty_salon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSchedulePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="#FFDD057F" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center">Рабочий день</TextBlock>
            <TextBlock></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock VerticalAlignment="Center">Дата</TextBlock>
                <DatePicker x:Name="DateDp"></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">С:</TextBlock>
                <ComboBox x:Name="StartTb">
                    <ComboBoxItem>8:00:00</ComboBoxItem>
                    <ComboBoxItem>9:00:00</ComboBoxItem>
                    <ComboBoxItem>10:00:00</ComboBoxItem>
                    <ComboBoxItem>11:00:00</ComboBoxItem>
                    <ComboBoxItem>12:00:00</ComboBoxItem>
                    <ComboBoxItem>13:00:00</ComboBoxItem>
                    <ComboBoxItem>14:00:00</ComboBoxItem>
                    <ComboBoxItem>15:00:00</ComboBoxItem>
                    <ComboBoxItem>16:00:00</ComboBoxItem>
                    <ComboBoxItem>17:00:00</ComboBoxItem>
                    <ComboBoxItem>18:00:00</ComboBoxItem>
                    <ComboBoxItem>19:00:00</ComboBoxItem>
                    <ComboBoxItem>20:00:00</ComboBoxItem>
                </ComboBox>
                <TextBlock VerticalAlignment="Center">по:</TextBlock>
                <ComboBox x:Name="EndTb">
                    <ComboBoxItem>8:00:00</ComboBoxItem>
                    <ComboBoxItem>9:00:00</ComboBoxItem>
                    <ComboBoxItem>10:00:00</ComboBoxItem>
                    <ComboBoxItem>11:00:00</ComboBoxItem>
                    <ComboBoxItem>12:00:00</ComboBoxItem>
                    <ComboBoxItem>13:00:00</ComboBoxItem>
                    <ComboBoxItem>14:00:00</ComboBoxItem>
                    <ComboBoxItem>15:00:00</ComboBoxItem>
                    <ComboBoxItem>16:00:00</ComboBoxItem>
                    <ComboBoxItem>17:00:00</ComboBoxItem>
                    <ComboBoxItem>18:00:00</ComboBoxItem>
                    <ComboBoxItem>19:00:00</ComboBoxItem>
                    <ComboBoxItem>20:00:00</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <TextBlock></TextBlock>
            <Button x:Name="SaveBtn" Background="#FFDD057F" Foreground="White" Click="SaveBtn_Click">Сохранить</Button>
        </StackPanel>
    </Grid>
</Page>
