<UserControl x:Class="Beauty_salon.Components.UserControls.MaterialUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Beauty_salon.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="770">
    <Border BorderBrush="#FFDD057F" BorderThickness="1" Width="700" Height="110" Margin="35 20">
        <Grid>
            <StackPanel Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="#FFDD057F" FontWeight="Bold">Название:</TextBlock>
                    <TextBlock x:Name="TitleTb" Foreground="#FFDD057F" FontWeight="Bold"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Остаток на складе:</TextBlock>
                    <TextBlock x:Name="QuantityTb"></TextBlock>
                </StackPanel>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button x:Name="EditBtn" Background="#FFDD057F" Foreground="White" Click="EditBtn_Click">Редактировать</Button>
                <Button x:Name="DeleteBtn" Background="#FFDD057F" Foreground="White" Click="DeleteBtn_Click">Удалить</Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
