<UserControl x:Class="Beauty_salon.Components.UserControls.ScheduleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Beauty_salon.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#FFDD057F" BorderThickness="1" Width="700" Height="110" Margin="35 20">
        <Grid>
            <StackPanel VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="#FFDD057F" FontWeight="Bold">Дата:</TextBlock>
                    <TextBlock x:Name="DateTb" Foreground="#FFDD057F" FontWeight="Bold"></TextBlock>
                </StackPanel>
                <StackPanel x:Name="EmpSp" Orientation="Horizontal">
                    <TextBlock>Сотрудник:</TextBlock>
                    <TextBlock x:Name="EmployeeTb"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Время начала:</TextBlock>
                    <TextBlock x:Name="TimeStartTb"></TextBlock>
                    <TextBlock>Время окончания:</TextBlock>
                    <TextBlock x:Name="TimeEndTb"></TextBlock>
                </StackPanel>
                
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
